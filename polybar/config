[module/date]
type = internal/date
interval = 5

# Todo: add date formats to setting section
date =
date-alt = "%d.%m.%Y"

# Todo: add time formats to setting section
time = %H:%M
time-alt = %H:%M:%S

format-prefix = ${icons.date}
format-prefix-foreground = ${colors.date-icon-foreground}
format-underline = ${colors.date-underline}
label = %date% %time%

