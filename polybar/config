[settings]
# Uncomment for change monitor
# monitor = ${env:MONITOR:e-P-1-1}
width = 100%
height = 27
radius = 0
modules-left = i3
modules-center = rainbow-text
modules-right = services docker status-web status-database filesystem volume memory cpu wlan eth battery temperature date

[module/services]
type = custom/script
exec = systemctl --type=service --state=running list-units --no-pager | grep running | wc -l
interval = 10
label = ${icons.services}
click-left = ~/.config/polybar/scripts/services.sh

[module/docker]
type = custom/script
exec = if docker version >/dev/null 2>&1; then docker ps -q | wc -l; fi
interval = 10
label = ${icons.docker}
click-left = ~/.config/polybar/scripts/docker.sh

[bar/top]
# Uncomment for change monitor
#monitor = ${settings.monitor}
width = ${settings.width}
height = ${settings.height}
radius = ${settings.radius}
fixed-center = false

background = ${colors.bar-top-background}
foreground = ${colors.bar-top-foreground}

line-size = 0

border-bottom-size = 1
border-bottom-color = ${colors.bar-top-border}

padding-top = 2
padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = FontAwesome:size=10;0
font-1 = Font Awesome 5 Free:size=10;0
font-2 = Font Awesome 5 Brands:size=10;0
font-3 = Droid Sans Mono Dotted for Powerline:size=10
font-4 = unifont:fontformat=truetype:size=8:antialias=false;0
font-5 = xos4 Terminess Powerline:pixelsize=10;1
font-6 = siji:pixelsize=10;1

modules-left = ${settings.modules-left}
modules-center = ${settings.modules-center}
modules-right = ${settings.modules-right}

tray-position = right
tray-padding = 2
tray-transparent = true

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
mount-1 = /var
mount-2 = /home

label-mounted = ${icons.filesystem}
label-unmounted = %mountpoint% not mounted

[module/i3]
type = internal/i3
strip-wsnumbers = true
fuzzy-match = true
format = <label-mode><label-state>
index-sort = true
wrapping-scroll = false

; mode = Current mode name
label-mode-padding = ${colors.i3-label-mode-padding}
label-mode-foreground = ${colors.i3-label-mode-foreground}
label-mode-background = ${colors.i3-label-mode-background}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.i3-label-focused-background}
label-focused-underline = ${colors.i3-label-focused-underline}
label-focused-padding = ${colors.i3-label-focused-padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-background = ${colors.i3-label-unfocused-background}
label-unfocused-underline = ${colors.i3-label-unfocused-underline}
label-unfocused-padding = ${colors.i3-label-unfocused-padding}

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${colors.i3-label-visible-background}
label-visible-underline = ${colors.i3-label-visible-underline}
label-visible-padding = ${colors.i3-label-visible-padding}

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.i3-label-urgent-background}
label-urgent-underline = ${colors.i3-label-urgent-underline}
label-urgent-padding = ${colors.i3-label-urgent-padding}

