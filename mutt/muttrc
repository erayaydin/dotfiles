# Folder Hooks
folder-hook "account.in.yayd.era" "$XDG_CONFIG_HOME/mutt/accounts/in.yayd.era/config"
folder-hook "account.com.gmail.erayaydin2016" "source $XDG_CONFIG_HOME/mutt/accounts/com.gmail.erayaydin2016"
folder-hook "account.tr.com.ozguryazilim.eray.aydin" "source $XDG_CONFIG_HOME/mutt/accounts/tr.com.ozguryazilim.eray.aydin/config"

# Default Account
source $XDG_CONFIG_HOME/mutt/accounts/in.yayd.era/config

# Macros
macro index <f2> "<sync-mailbox><refresh><enter-command>source $XDG_CONFIG_HOME/mutt/accounts/in.yayd.era/config<enter><change-folder>!<enter>"
macro index <f3> "<sync-mailbox><refresh><enter-command>source $XDG_CONFIG_HOME/mutt/accounts/com.gmail.erayaydin2016/config<enter><change-folder>!<enter>"
macro index <f4> "<sync-mailbox><refresh><enter-command>source $XDG_CONFIG_HOME/mutt/accounts/tr.com.ozguryazilim.eray.aydin/config<enter><change-folder>!<enter>"

# Editor Config
set charset = "utf-8"
set editor = "vim -c 'set nocompatible tw=72 ft=mail noautoindent fo=aw cursorline number'"

# Statusbar
set status_chars = " *%A"
set status_format = "───[ Acc: %f ]───[%r%m mesaj%?n? (%n yeni)?%?d? (%d silinecek)?%?t? (%t işaretli)? ]───%>─%?p?( %p ertelenmiş )?───"

# Sidebar
set sidebar_format = "%B%?F? [%F]?%* %?N?%N/?%S"
set sidebar_new_mail_only = no
set sidebar_sort_method = "name"
set sidebar_visible = yes
set sidebar_width = 35

# Aliases
bind index,pager H sidebar-toggle-visible       # H to toggle visibility of the sidebar
bind index,pager J sidebar-next                 # J to select next folder
bind index,pager K sidebar-prev                 # K to select previous folder
bind index,pager L sidebar-open                 # L to open selected folder
bind index,pager G imap-fetch-mail              # Fetch new mails

# Auto-View
auto_view application/msword
auto_view application/octet-stream
auto_view application/RTF
auto_view application/x-gunzip
auto_view application/x-gzip
auto_view application/x-perl
auto_view application/x-sh
auto_view application/x-tar-gz
auto_view application/x-tcl
auto_view application/x-zip-compressed
auto_view application/zip
auto_view image/tiff
auto_view text/html
auto_view text/x-vcard

# Multi-part
alternative_order text/enriched text/plain text text/html

# Headers
ignore *
unignore From: To: CC: Date: Subject:
unhdr_order *
hdr_order From: To: CC: Date: Subject:

# Hide CPGME warning
set crypt_use_gpgme = no

# Line Breaks
set text_flowed = yes

# Signature on top
set sig_on_top = yes

# Do not store local copies on sentmail
set record = no

# Index View
set date_format = "%d/%m/%y"
set index_format = "[%Z]  %D  %-20.20F  %s"
set reply_regexp = "^(([Rr][Ee]?(\[[0-9]+\])?: *)?(\[[^]]+\] *)?)*"
set sort = threads
set sort_aux = reverse-last-date-received
set sort_re = yes
set uncollapse_jump = yes

# Pager View
set markers = no
set menu_scroll = yes
set pager_context = 3
set pager_index_lines = 10
set pager_stop = yes
set tilde = yes

# Prevent duplicate sent email
set copy = no

# From Header
set use_from = yes
set envelope_from = yes

# Mail Check
set mail_check = 60
set mail_check_stats = yes

# Theme
# Uncomment for use gruvbox theme.
#source ~/.mutt/themes/gruvbox.muttrc
#source ~/.mutt/themes/gruvbox-extended.muttrc

# Display version on startup
push <show-version>

# Faster, Mutt. Faster!
set sleep_time = 0

# Shut the fuck up, Mutt
set beep = no
set wait_key = no

