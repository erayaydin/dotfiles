## Global

# Set quota for retrieve data
quota = 5000M

# Number of retries when download
tries = 50

# Wait between retries
waitretry = 10

## Local

# Set timestamping
timestamping = on

# Set default headers
header = From: Eray AYDIN <er@yayd.in>
header = Accept-Language: en-GB,en,tr;q=0.9,tr-TR;q=0.8
header = Accept-Encoding: gzip, deflate, br
header = Cache-Control: no-cache
header = Pragma: no-cache
header = User-Agent: Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/75.0.3770.100 Safari/537.36

# Proxy
#use_proxy = on
#https_proxy = http://...:18023/
#http_proxy = http://...:18023/
#ftp_proxy = http://...:18023/

# Dot Style
# Available: default, binary, mega(for big files), micro(for small files)
dot_style = default

# Robots
# Download /robots.txt
robots = on

# Don't wait before connections
wait = 0

# Follow FTP links
follow_ftp = on

# Try Ipv6 first
prefer-family = IPv6

